---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const latestPosts = (await getCollection('blog'))
	.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
	.slice(0, 3);
---

<Layout title="Valokuvaaja | Portfolio">
	<section class="hero">
		<h1>Hetket joita ei halua unohtaa</h1>
		<p>Hevos- ja koirakilpailuihin sek채 n채yttelyihin erikoistunut tapahtumakuvaaja. Tallennan parhaat hetket ja aidoimmat tunnelmat ikuiseksi muistoksi valokuviin.</p>
		<div class="cta">
			<a href="/contact" class="button">Ota yhteytt채</a>
		</div>
	</section>

	<section class="featured-blog">
		<div class="section-header">
			<h2>Viimeisimm채t kirjoitukset</h2>
			<a href="/blog" class="view-all">Kaikki kirjoitukset &rarr;</a>
		</div>
		
		<div class="blog-preview-list">
			{latestPosts.map((post) => (
				<article class="blog-item">
					<a href={`/blog/${post.id}`}>
						<div class="image-wrapper">
							{post.data.image ? (
								<img src={post.data.image} alt={post.data.alt || post.data.title} />
							) : (
								<div class="placeholder-img"></div>
							)}
						</div>
						<div class="item-content">
							<div class="item-meta">
								<time datetime={post.data.date.toISOString()}>
									{post.data.date.toLocaleDateString('fi-FI', {
										year: 'numeric',
										month: 'short',
										day: 'numeric',
									})}
								</time>
							</div>
							<h3>{post.data.title}</h3>
							{post.data.description && <p class="excerpt">{post.data.description}</p>}
						</div>
					</a>
				</article>
			))}
		</div>
	</section>
</Layout>

<style>
	.hero {
		padding: 8rem 0 4rem;
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: clamp(2.5rem, 8vw, 4.5rem);
		line-height: 1.1;
		margin-bottom: 1.5rem;
		font-weight: 700;
	}

	.hero p {
		font-size: 1.25rem;
		color: var(--muted-color);
		margin-bottom: 2.5rem;
		line-height: 1.6;
	}

	.button {
		display: inline-block;
		background: var(--text-color);
		color: var(--bg-color);
		padding: 1.2rem 3rem;
		border-radius: 100px;
		font-weight: 700;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
	}

	.button:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
		opacity: 1;
	}

	.featured-blog {
		margin-top: 2rem;
		margin-bottom: 6rem;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2.5rem;
	}

	.section-header h2 {
		margin: 0;
		font-size: 1.75rem;
		font-weight: 700;
	}

	.view-all {
		color: var(--muted-color);
		font-size: 0.85rem;
		font-weight: 600;
		transition: color 0.2s ease;
	}

	.view-all:hover {
		color: var(--text-color);
	}

	.blog-preview-list {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.blog-item {
		transition: transform 0.3s ease;
	}

	.blog-item:hover {
		transform: translateX(10px);
	}

	.blog-item a {
		text-decoration: none;
		color: inherit;
		display: flex;
		gap: 2rem;
		align-items: flex-start;
	}

	.image-wrapper {
		width: 100px;
		height: 100px;
		flex-shrink: 0;
		border-radius: 50%;
		overflow: hidden;
		background: var(--secondary-color);
		border: 2px solid var(--secondary-color);
		transition: border-color 0.3s ease;
	}

	.blog-item:hover .image-wrapper {
		border-color: var(--text-color);
	}

	.image-wrapper img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.placeholder-img {
		width: 100%;
		height: 100%;
		background: linear-gradient(45deg, var(--secondary-color), #333);
	}

	.item-content {
		flex: 1;
	}

	.item-meta time {
		color: var(--muted-color);
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.item-content h3 {
		margin: 0.25rem 0 0.5rem 0;
		font-size: 1.35rem;
		line-height: 1.3;
		font-weight: 700;
		transition: color 0.3s ease;
	}

	.blog-item:hover h3 {
		color: var(--text-color);
	}

	.excerpt {
		color: var(--muted-color);
		font-size: 0.95rem;
		line-height: 1.5;
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	@media (max-width: 640px) {
		.blog-item a {
			gap: 1.25rem;
		}

		.image-wrapper {
			width: 70px;
			height: 70px;
		}

		.item-content h3 {
			font-size: 1.15rem;
		}
		
		.excerpt {
			font-size: 0.85rem;
			-webkit-line-clamp: 1;
		}
	}

	@media (max-width: 640px) {
		.hero {
			padding: 4rem 1rem;
		}
		
		.section-header h2 {
			font-size: 1.75rem;
		}

		.blog-preview-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
