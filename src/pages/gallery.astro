---
import Layout from '../layouts/Layout.astro';

// In a real scenario, these would come from a content collection or directly from the file system
const photos = [
	{ src: '/images/uploads/default-blog.jpg', alt: 'Maisema 1', category: 'Maisema' },
	{ src: '/images/uploads/default-blog.jpg', alt: 'Muotokuva 1', category: 'Muotokuva' },
	{ src: '/images/uploads/default-blog.jpg', alt: 'Katu 1', category: 'Katukuvaus' },
	{ src: '/images/uploads/default-blog.jpg', alt: 'Maisema 2', category: 'Maisema' },
];
---

<Layout title="Galleria | Valokuvausportfolio">
	<h1>Galleria</h1>
	<p class="subtitle">Valikoituja otoksia eri genreist√§.</p>

	<div class="gallery-grid">
		{photos.map((photo) => (
			<div class="gallery-item">
				<img src={photo.src} alt={photo.alt} loading="lazy" />
				<div class="overlay">
					<span>{photo.category}</span>
				</div>
			</div>
		))}
	</div>
</Layout>

<style>
	h1 {
		font-size: 3rem;
		margin-bottom: 0.5rem;
	}

	.subtitle {
		color: var(--muted-color);
		margin-bottom: 3rem;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 1.5rem;
	}

	.gallery-item {
		position: relative;
		aspect-ratio: 1;
		overflow: hidden;
		border-radius: 8px;
		background: var(--secondary-color);
	}

	.gallery-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.overlay {
		position: absolute;
		inset: 0;
		background: rgba(0, 0, 0, 0.5);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.gallery-item:hover .overlay {
		opacity: 1;
	}

	.overlay span {
		font-family: 'Outfit', sans-serif;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}
</style>
