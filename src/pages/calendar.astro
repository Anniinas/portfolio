---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const events = (await getCollection('events'))
	.sort((a, b) => a.data.date.valueOf() - b.data.date.valueOf());

const upcomingEvents = events.filter(event => event.data.date >= new Date());
const pastEvents = events.filter(event => event.data.date < new Date()).reverse();
---

<Layout title="Kalenteri | Anniina Photo">
	<section class="calendar-container">
		<h1>Kalenteri</h1>
		<p class="intro">T√§√§lt√§ n√§et tulevat tapahtumat, joissa olen mukana kuvaamassa.</p>

		<div class="events-section">
			<h2>Tulevat tapahtumat</h2>
			{upcomingEvents.length > 0 ? (
				<div class="events-grid">
					{upcomingEvents.map((event) => (
						<div class="event-card">
							<div class="event-date">
								<span class="day">{event.data.date.getDate()}</span>
								<span class="month">{event.data.date.toLocaleDateString('fi-FI', { month: 'short' })}</span>
							</div>
							<div class="event-details">
								<h3>{event.data.title}</h3>
								<p class="location">üìç {event.data.location}</p>
								{event.body && <div class="description">{event.body}</div>}
							</div>
						</div>
					))}
				</div>
			) : (
				<p class="empty-state">Ei tiedossa olevia tulevia tapahtumia t√§ll√§ hetkell√§.</p>
			)}
		</div>

		{pastEvents.length > 0 && (
			<div class="events-section past-events">
				<h2>Menneet tapahtumat</h2>
				<div class="events-list">
					{pastEvents.map((event) => (
						<div class="past-event-item">
							<time datetime={event.data.date.toISOString()}>
								{event.data.date.toLocaleDateString('fi-FI')}
							</time>
							<span class="title">{event.data.title}</span>
							<span class="location">{event.data.location}</span>
						</div>
					))}
				</div>
			</div>
		)}
	</section>
</Layout>

<style>
	.calendar-container {
		padding: 3rem 0;
	}

	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.intro {
		color: var(--muted-color);
		max-width: 600px;
		margin-bottom: 4rem;
		font-size: 1.1rem;
	}

	.events-section {
		margin-bottom: 5rem;
	}

	h2 {
		font-size: 2rem;
		margin-bottom: 2rem;
		border-bottom: 1px solid var(--secondary-color);
		padding-bottom: 0.5rem;
	}

	.events-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
	}

	.event-card {
		background: var(--secondary-color);
		border-radius: 12px;
		padding: 2rem;
		display: flex;
		gap: 2rem;
		align-items: flex-start;
		transition: transform 0.2s ease;
	}

	.event-card:hover {
		transform: translateY(-5px);
	}

	.event-date {
		background: #000;
		padding: 1rem;
		border-radius: 8px;
		display: flex;
		flex-direction: column;
		align-items: center;
		min-width: 70px;
		border: 1px solid #333;
	}

	.event-date .day {
		font-size: 1.5rem;
		font-weight: 700;
		font-family: 'Outfit', sans-serif;
	}

	.event-date .month {
		font-size: 0.8rem;
		text-transform: uppercase;
		color: var(--muted-color);
		font-weight: 700;
	}

	.event-details h3 {
		margin: 0 0 0.5rem 0;
		font-size: 1.25rem;
	}

	.location {
		color: var(--accent-color);
		font-weight: 700;
		font-size: 0.9rem;
		margin-bottom: 1rem;
	}

	.description {
		font-size: 0.95rem;
		line-height: 1.5;
		color: var(--muted-color);
	}

	.empty-state {
		color: var(--muted-color);
		font-style: italic;
	}

	.past-events {
		opacity: 0.7;
	}

	.events-list {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.past-event-item {
		display: grid;
		grid-template-columns: 100px 1fr 1fr;
		padding: 1rem;
		border-bottom: 1px solid var(--secondary-color);
		font-size: 0.9rem;
	}

	@media (max-width: 600px) {
		.past-event-item {
			grid-template-columns: 1fr;
			gap: 0.5rem;
		}
	}

	.past-event-item time {
		color: var(--muted-color);
	}

	.past-event-item .title {
		font-weight: 700;
	}

	.past-event-item .location {
		margin: 0;
		text-align: right;
	}

	@media (max-width: 600px) {
		.past-event-item .location {
			text-align: left;
		}
		
		.event-card {
			flex-direction: column;
			gap: 1rem;
		}
		
		.event-date {
			flex-direction: row;
			gap: 0.5rem;
			min-width: unset;
			padding: 0.5rem 1rem;
		}
	}
</style>
