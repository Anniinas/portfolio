---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import MastodonShare from '../../components/MastodonShare.astro';
import MastodonComments from '../../components/MastodonComments.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<Layout 
	title={`${post.data.title} | Blogi`}
	description={post.data.description}
	image={post.data.image}
>
	<article class="blog-post">
		{post.data.image && (
			<img src={post.data.image} alt={post.data.alt || post.data.title} class="hero-image" />
		)}
		
		<div class="content-wrapper">
			<header>
				<time datetime={post.data.date.toISOString()}>
					{post.data.date.toLocaleDateString('fi-FI', {
						year: 'numeric',
						month: 'long',
						day: 'numeric',
					})}
				</time>
				<h1>{post.data.title}</h1>
			</header>

			<div class="prose">
				<Content />
			</div>
			
			<div class="share-links">
				<span>Jaa kirjoitus:</span>
				<div class="share-buttons">
					<MastodonShare title={post.data.title} url={Astro.url.toString()} />
					<a href={`https://www.pinterest.com/pin/create/button/?url=${encodeURIComponent(Astro.url.toString())}&media=${encodeURIComponent(new URL(post.data.image || '', Astro.site || Astro.url).toString())}&description=${encodeURIComponent(post.data.title)}`} target="_blank" class="share-link pinterest">
						<svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor">
							<path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.965 1.406-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.261 7.929-7.261 4.162 0 7.397 2.965 7.397 6.93 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.607 0 11.985-5.365 11.985-11.987C23.97 5.39 18.592 0 12.017 0z"/>
						</svg>
						Pinterest
					</a>
					<a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`} target="_blank" class="share-link linkedin">
						<svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
						LinkedIn
					</a>
					<a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.toString())}`} target="_blank" class="share-link facebook">
						<svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor">
							<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
						</svg>
						Facebook
					</a>
				</div>
			</div>

			{post.data.mastodon_post_id && <MastodonComments postId={post.data.mastodon_post_id} />}
			
			<div class="back-link">
				<a href="/blog">&larr; Takaisin blogiin</a>
			</div>
		</div>
	</article>
</Layout>

<style>
	.blog-post {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero-image {
		width: 100%;
		max-height: 500px;
		object-fit: cover;
		border-radius: 12px;
		margin-bottom: 2rem;
	}

	.content-wrapper {
		padding: 0 1rem;
	}

	header {
		margin-bottom: 2rem;
		text-align: center;
	}

	time {
		color: var(--muted-color);
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-size: 0.9rem;
	}

	h1 {
		font-size: 3.5rem;
		margin: 0.5rem 0;
		line-height: 1.1;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2.2rem;
		}
	}

	.prose {
		font-size: 1.125rem;
		line-height: 1.8;
		color: #ccc;
	}

	.prose :global(h2) {
		color: var(--text-color);
		margin-top: 2.5rem;
	}

	.prose :global(p) {
		margin-bottom: 1.5rem;
	}

	.prose :global(img) {
		border-radius: 8px;
		margin: 2rem 0;
	}

	.back-link {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 1px solid var(--secondary-color);
	}

	.back-link a {
		color: var(--muted-color);
	}

	.share-links {
		margin-top: 2rem;
		display: flex;
		gap: 1rem;
		align-items: center;
		padding: 0.5rem 0;
		border-top: 1px solid var(--secondary-color);
		color: var(--muted-color);
	}

	.share-links span {
		font-weight: 400;
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.share-buttons {
		display: flex;
		gap: 0.8rem;
		align-items: center;
		flex-wrap: wrap;
	}

	@media (max-width: 768px) {
		.share-links {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.8rem;
		}
	}

	.share-link {
		display: inline-flex;
		align-items: center;
		gap: 0.3rem;
		color: var(--muted-color) !important;
		font-family: 'Inter', sans-serif;
		font-weight: 400;
		font-size: 0.8rem;
		line-height: inherit;
		text-decoration: none;
		transition: color 0.2s;
	}

	.share-link svg {
		vertical-align: middle;
	}

	.share-link.facebook:hover {
		color: #1877f2 !important;
	}

	.share-link.linkedin:hover {
		color: #0a66c2 !important;
	}

	.share-link.pinterest:hover {
		color: #e60023 !important;
	}
</style>
