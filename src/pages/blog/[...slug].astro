---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} | Blogi`}>
	<article class="blog-post">
		{post.data.image && (
			<img src={post.data.image} alt={post.data.alt || post.data.title} class="hero-image" />
		)}
		
		<div class="content-wrapper">
			<header>
				<time datetime={post.data.date.toISOString()}>
					{post.data.date.toLocaleDateString('fi-FI', {
						year: 'numeric',
						month: 'long',
						day: 'numeric',
					})}
				</time>
				<h1>{post.data.title}</h1>
			</header>

			<div class="prose">
				<Content />
			</div>
			
			<div class="back-link">
				<a href="/blog">&larr; Takaisin blogiin</a>
			</div>
		</div>
	</article>
</Layout>

<style>
	.blog-post {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero-image {
		width: 100%;
		max-height: 500px;
		object-fit: cover;
		border-radius: 12px;
		margin-bottom: 2rem;
	}

	.content-wrapper {
		padding: 0 1rem;
	}

	header {
		margin-bottom: 2rem;
		text-align: center;
	}

	time {
		color: var(--muted-color);
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-size: 0.9rem;
	}

	h1 {
		font-size: 3.5rem;
		margin: 0.5rem 0;
		line-height: 1.1;
	}

	.prose {
		font-size: 1.125rem;
		line-height: 1.8;
		color: #ccc;
	}

	.prose :global(h2) {
		color: var(--text-color);
		margin-top: 2.5rem;
	}

	.prose :global(p) {
		margin-bottom: 1.5rem;
	}

	.prose :global(img) {
		border-radius: 8px;
		margin: 2rem 0;
	}

	.back-link {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 1px solid var(--secondary-color);
	}

	.back-link a {
		color: var(--muted-color);
	}
</style>
